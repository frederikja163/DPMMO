$title @s actionbar [{"text":"$(display) lvl ", "color": "green"}, {score: {name:"@s", objective: "$(skill)_level"}}, " [", {score:{name:"@s", objective:"$(skill)_xp"}}, "/", {score:{name:"@s", objective:"$(skill)_req"}}, "]"]
$execute if score @s $(skill)_level matches 10.. run title @s actionbar [{"text":"$(display) lvl ", "color": "green"}, {score: {name:"@s", objective: "$(skill)_level"}}, " [", {score:{name:"@s", objective:"$(skill)_xp"}}, "/", {score:{name:"@s", objective:"$(skill)_req"}}, "] | ", {score:{name:"@s",objective:"$(skill)_charges"}}, "/", {score:{name:"@s",objective:"$(skill)_charges_max"}}, " charges"]
$execute if score @s $(skill)_level matches 10.. if score @s $(skill)_charges < @s $(skill)_charges_max run title @s actionbar [{"text":"$(display) lvl ", "color": "green"}, {score: {name:"@s", objective: "$(skill)_level"}}, " [", {score:{name:"@s", objective:"$(skill)_xp"}}, "/", {score:{name:"@s", objective:"$(skill)_req"}}, "] | ", {score:{name:"@s",objective:"$(skill)_charges"}}, "/", {score:{name:"@s",objective:"$(skill)_charges_max"}}, " charges +1 in ", {score:{name:"@s",objective:"$(skill)_cooldown"}}]